<p id="notice"><%= notice %></p>
  <div class="center">
    <div class="row">
      <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= image_tag  listing.image.url %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <h3><%= "sold by #{listing.user.name}" %></h3>
            <%= link_to 'Show', listing, class: "btn btn-link"%>
            <%= link_to 'edit', edit_listing_path(listing), class: "btn btn-link" %>
            <%= link_to 'Delete', listing, method: :delete, data:{confirm: "are you sure?"}, class: "btn btn-link" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
<br>

<%= link_to 'New Listing', new_listing_path, class: "btn  btn-link" %>
