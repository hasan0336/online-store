<div class="jumbotron">
<h1 class="center">HandCreafted items <br>
from around the world</h1>
<h2 class="center">Discover one of a kind items</h2>
</div>
  <div class="center">
    <div class="row">
      <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing  %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <h3><%= "sold by #{listing.user.name}" %></h3>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
<br>
<% if (user_signed_in?) %>
  <%= link_to 'New Listing', new_listing_path, class: "btn  btn-link" %>
<% end %>